#!/usr/bin/env sh

# ----------------------------------------
# Load Husky environment
# ----------------------------------------
. "$(dirname -- "$0")/_/husky.sh"

# ----------------------------------------
# Colors
# ----------------------------------------
COLOR_GREEN='\033[1;32m'
COLOR_YELLOW='\033[1;33m'
COLOR_RESET='\033[0m'

# ----------------------------------------
# Detect branch
# ----------------------------------------
BRANCH_NAME="$(git rev-parse --abbrev-ref HEAD)"

# ---------------------------------------------------
# Run ESLint and Jest unit tests on 'dev' branch
# ---------------------------------------------------
if [ "$BRANCH_NAME" = "dev" ]; then
  echo "${COLOR_GREEN}üîç Running ESLint on dev...${COLOR_RESET}"
  make lint-dev-local

  echo "${COLOR_GREEN}üß™ Running Jest on dev...${COLOR_RESET}"
  make test-dev-local

# ---------------------------------------------------
# Run Playwright E2E tests on 'qa' branch
# ---------------------------------------------------
elif [ "$BRANCH_NAME" = "qa" ]; then
  echo "${COLOR_GREEN}üé≠ Running Playwright on qa...${COLOR_RESET}"
  make test-qa-local

# ---------------------------------------------------
# Run ESLint on 'feature/*' branches
# ---------------------------------------------------
elif echo "$BRANCH_NAME" | grep -qE '^feature/'; then
  echo "${COLOR_GREEN}üîç Running ESLint on feature...${COLOR_RESET}"
  make lint-feature-local

else
  echo "${COLOR_YELLOW}‚ö†Ô∏è  Skipping pre-push checks on unsupported branch '${BRANCH_NAME}'${COLOR_RESET}"
fi